import pandas as pd

def is_column_blank(df, column_name):
    """
    Check if a specific column in a DataFrame contains any blank values.
    
    Parameters:
        df (pandas.DataFrame): The DataFrame to check.
        column_name (str): The name of the column to check.
        
    Returns:
        bool: True if the column contains blank values, False otherwise.
    """
    return df[column_name].isnull().any()

# Example usage:
# Assuming 'df' is your DataFrame
column_name = 'your_column_name'
is_blank = is_column_blank(df, column_name)
if is_blank:
    print(f"The column '{column_name}' contains blank values.")
else:
    print(f"The column '{column_name}' does not contain any blank values.")
