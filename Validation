import pandas as pd

def count_true_values(df, column_name):
  """Counts the number of True values in a specified column of a DataFrame.

  Args:
    df: The pandas DataFrame.
    column_name: The name of the column to check.

  Returns:
    The count of True values in the specified column.
  """

  try:
    return df[column_name].value_counts()[True]
  except KeyError:
    return 0

# Example usage:
data = {'Column1_valid': [True, False, True],
        'Duplicate_Column2': [False, True, False],
        'Column3': [True, False, True]}
df = pd.DataFrame(data)

count = count_true_values(df, 'Column1_valid')
print(count)  # Output: 2
