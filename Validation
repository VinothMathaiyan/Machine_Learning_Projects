Qualtrics.SurveyEngine.addOnload(function(question) {
  var questionId = question.getQuestionId();
  var input = document.getElementById(questionId);

  input.addEventListener('input', function() {
    var wordCount = this.value.trim().split(/\s+/).length;
    if (wordCount > 300) {
      // Raise an error or provide feedback
      alert("You have exceeded the maximum word count of 300.");
      // You can also set a validation error message in Qualtrics using:
      // question.setValidationError("You have exceeded the maximum word count of 300.");
    }
  });
});
