import pandas as pd

# Load the master CSV file
df_master = pd.read_csv('master_file.csv')

# Define how many random rows you want to extract
X = 100  # Replace 100 with the number of random rows you want to extract

# Extract X random rows
df_random_sample = df_master.sample(n=X, random_state=42)  # random_state ensures reproducibility

# Save the random sample to a new CSV file
df_random_sample.to_csv('random_sample_file.csv', index=False)

print(f"File 'random_sample_file.csv' with {X} random rows exported successfully.")
