import pandas as pd

def create_separate_dataframe(df, columns_to_check):
  """Creates a separate DataFrame containing rows where any of the specified columns have False values.

  Args:
    df: The original DataFrame.
    columns_to_check: A list of column names to check for False values.

  Returns:
    A new DataFrame containing rows with False values in any of the specified columns.
  """

  # Check if any value in the specified columns is False
  condition = df[columns_to_check].any(axis=1)
  
  # Create a new DataFrame with rows where the condition is True
  new_df = df[condition]
  
  return new_df

# Example usage:
data = {'Column1': [True, False, True], 'Column2': [True, True, False], 'Column3': [True, True, True]}
df = pd.DataFrame(data)

columns_to_check = ['Column1', 'Column2']
new_df = create_separate_dataframe(df, columns_to_check)
print(new_df)
