import pandas as pd

def find_blank_rows(df):
  """Finds rows with all blank values in a DataFrame.

  Args:
    df: The pandas DataFrame.

  Returns:
    A list of row indices where all values are blank.
  """

  blank_rows = df[df.isnull().all(axis=1)].index.tolist()
  return blank_rows

# Sample DataFrame
data = {'Column1': [1, '', 3, '', 5],
        'Column2': ['', 2, '', 4, '']}
df = pd.DataFrame(data)

blank_row_indices = find_blank_rows(df)
print("Blank row indices:", blank_row_indices)
