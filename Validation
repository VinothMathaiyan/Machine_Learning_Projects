  transition: all 0.2s ease-in-out;
}

.button:hover {
  background-color: #005ca3;
}

.button:active {
  background-color: #004982;
  transform: translateY(2px);
}

.button:focus {
  outline: none;
  box-shadow: 0 0 0 3px #007BFF;
}

.button:focus-within {
  border-color: #007BFF;
}

.button:focus-visible {
  outline: 2px solid #007BFF;
}

.button:visited {
