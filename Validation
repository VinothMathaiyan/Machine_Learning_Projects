import pandas as pd

def check_duplicate(df, column_name='BRID'):
  """Checks for duplicate values in a specified column of a DataFrame.

  Args:
    df: The pandas DataFrame.
    column_name: The name of the column to check for duplicates.

  Returns:
    A list of duplicate values.
  """

  duplicates = df[df.duplicated(subset=[column_name])][column_name].tolist()
  return duplicates

# Example usage:
# Assuming valid_ids is your DataFrame with valid IDs
duplicate_brids = check_duplicate(valid_ids)

if duplicate_brids:
  print("Duplicate BRID values found:", duplicate_brids)
else:
  print("No duplicate BRID values found.")
