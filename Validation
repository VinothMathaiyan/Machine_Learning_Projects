import pandas as pd

def find_blank_columns(df):
  """Finds columns in a DataFrame that are completely blank.

  Args:
    df: The pandas DataFrame to check.

  Returns:
    A list of column names that are completely blank.
  """

  blank_columns = []
  for col in df.columns:
    if df[col].isnull().all():
      blank_columns.append(col)
  return blank_columns

# Example usage:
data = {'col1': [1, 2, 3], 'col2': [None, None, None], 'col3': ['', '', '']}
df = pd.DataFrame(data)

blank_cols = find_blank_columns(df)
print(blank_cols)  # Output: ['col2']
