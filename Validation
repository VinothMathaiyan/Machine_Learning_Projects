import pandas as pd

def check_header_value(df, header_name):
  """
  Checks if the value in the specified header of the DataFrame is blank.

  Args:
    df: The pandas DataFrame.
    header_name: The name of the header to check.

  Returns:
    True if the header value is not blank, False otherwise.
  """

  header_value = df[header_name].iloc[0]  # Assuming first row contains header values
  return not pd.isna(header_value) and header_value != ''
