import pandas as pd

def split_dataframe(df, id_column):
  """Splits a DataFrame into two files based on duplicate IDs.

  Args:
    df: The pandas DataFrame.
    id_column: The name of the ID column.
  """

  duplicates_df = df[df[id_column].duplicated(keep=False)]
  unique_df = df[~df[id_column].duplicated()]

  duplicates_df.to_excel('duplicates.xlsx', index=False)
  unique_df.to_excel('unique.xlsx', index=False)

# Sample DataFrame
data = {'ID': ['G12345', 'G67890', 'G12345', 'G98765'],
        'DateOfBirth': ['24/09/1974', '15/12/1980', '24/09/1974', '01/01/2000'],
        'Access': ['G1234524091974', 'G6789015121980', 'G1234524091974', 'G9876501012000']}
df = pd.DataFrame(data)

id_column = 'ID'

split_dataframe(df, id_column)
