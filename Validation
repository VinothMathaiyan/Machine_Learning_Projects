import pandas as pd

# Load the master CSV file
df_master = pd.read_csv('master_file.csv')

# Define how many times you want to repeat each row
X = 3  # Replace 3 with the number of repetitions you want

# Repeat each row X times
df_repeated = pd.DataFrame(df_master.values.repeat(X, axis=0), columns=df_master.columns)

# Save the repeated rows to a new CSV file
df_repeated.to_csv('repeated_rows_file.csv', index=False)

print(f"File 'repeated_rows_file.csv' with each row repeated {X} times exported successfully.")
