def check_values_in_column(df, column_name, values):
  """Checks if the given values appear in the specified column of the DataFrame.

  Args:
    df: The pandas DataFrame.
    column_name: The name of the column to check.
    values: A list of values to check for.

  Returns:
    A list of values that are not present in the column.
  """

  missing_values = []
  for value in values:
    if value not in df[column_name].values:
      missing_values.append(value)
  return missing_values

# Example usage:
import pandas as pd

data = {'column1': [1, 2, 3, 4, 5]}
df = pd.DataFrame(data)

values_to_check = [2, 5, 7]

missing = check_values_in_column(df, 'column1', values_to_check)
print(missing)  # Output: [7]
