import pandas as pd

def validate_access(df, date_of_birth_column, access_column):
  """Validates the Access column based on ID and DateOfBirth.

  Args:
    df: The pandas DataFrame with ID as the index.
    date_of_birth_column: The name of the DateOfBirth column.
    access_column: The name of the Access column.

  Returns:
    A list of indices where Access is invalid.
  """

  df[date_of_birth_column] = pd.to_datetime(df[date_of_birth_column], format='%d/%m/%Y')
  df['Access_Calculated'] = df.index.astype(str) + df[date_of_birth_column].dt.strftime('%d%m%Y')

  error_indices = df[df[access_column] != df['Access_Calculated']].index.tolist()
  return error_indices

# Sample DataFrame
data = {'ID': ['G12345', 'G67890'],
        'DateOfBirth': ['24/09/1974', '15/12/1980'],
        'Access': ['G1234524091974', 'G6789015121980']}
df = pd.DataFrame(data)
df.set_index('ID', inplace=True)

date_of_birth_column = 'DateOfBirth'
access_column = 'Access'

error_indices = validate_access(df, date_of_birth_column, access_column)
print(error_indices)
