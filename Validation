import pandas as pd

def validate_column(df, column_name, allowed_values):
  """Validates a column for values not in the allowed list.

  Args:
    df: The pandas DataFrame.
    column_name: The name of the column to validate.
    allowed_values: A list of allowed values.

  Returns:
    A list of indices where the column value is not in the allowed list.
  """

  error_indices = df[~df[column_name].isin(allowed_values)].index.tolist()
  return error_indices

# Sample DataFrame
data = {'Grade': ['VP', 'AVP', 'MD', 'Manager', 'Director']}
df = pd.DataFrame(data)

allowed_grades = ['VP', 'AVP', 'MD']
error1 = validate_column(df, 'Grade', allowed_grades)

print("Error 1:", error1)
