function removeDuplicatesById(data, idProp) {
  const uniqueIds = new Set();
  return data.filter(item => {
    const id = item[idProp];
    return uniqueIds.has(id) ? false : uniqueIds.add(id);
  });
}

// Example usage:
const data = [
  { id: 1, name: 'Alice' },
  { id: 2, name: 'Bob' },
  { id: 1, name: 'Charlie' }
];

const uniqueData = removeDuplicatesById(data, 'id');
console.log(uniqueData); // Output: [{ id: 1, name: 'Alice' }, { id: 2, name: 'Bob' }]
